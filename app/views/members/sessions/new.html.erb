<%= render partial: 'general_partials/title', locals: { section_title:  "Entrar", fa_icon: "fa-unlock-alt" } %>


<div class="credentials_page">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%- flash.each do |key, msg| -%>
     <%= content_tag :div, msg, :class => "alert" if msg.is_a?(String) %>
    <%- end -%>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "text_input"  %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: "text_input"  %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions center">
      <%= f.submit "Log in", class: "secundary_button medium_button" %>
    </div>
  <% end %>
  <div class="center">
    <%= render "members/shared/links" %>
  </div>
</div>
