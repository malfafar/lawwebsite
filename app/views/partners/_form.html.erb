<div class="box-body">
  <%= form_for(@partner) do |f| %>
    <% if @partner.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@partner.errors.count, "error") %>  impediram este parceiro de ser guardado:</h2>

        <ul>
        <% @partner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <%# TODO: WYSIWYG %>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :url %><br>
      <%= f.text_field :url, class: "form-control"  %>
    </div>
    <% if @partner.image.exists? %>
      <div class="form-group">
        <%= image_tag @partner.image.url(:thumb) %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>

    <div class="box-footer">
      <%= f.submit  class: "btn btn-primary" %>
    </div>
  <% end %>
