<div class="box-body">
  <%= form_for(@protocol) do |f| %>
    <% if @protocol.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@protocol.errors.count, "error") %>  impediram este protocolo de ser guardado:</h2>

        <ul>
        <% @protocol.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control"  %>
    </div>



    <div class="box-footer">
      <%= f.submit "Submeter" , class: "btn btn-primary" %>
    </div>
  <% end %>
