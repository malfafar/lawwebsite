<div class="box-body">
  <%= form_for(@private_information) do |f| %>
    <% if @private_information.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@private_information.errors.count, "error") %> prohibited this private_information from being saved:</h2>

        <ul>
        <% @private_information.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :text %><br>
      <%= f.text_area :text, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :document %><br>
      <% if @private_information.document.exists? %>
        <%= link_to @private_information.document_file_name, @private_information.document.url %>
      <% end %>
      <%= f.file_field :document %>
    </div>


    <div class="box-footer">
      <%= f.submit   class: "btn btn-primary"%>
    </div>
  <% end %>
